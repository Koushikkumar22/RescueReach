
{
  "version": 2,
  "installCommand": "npm install --include=dev",
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "client/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    // 1. Route API calls to the serverless function
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts" 
    },
    // 2. Fallback for all other requests (static files)
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ]
}
